{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "outDir": "dist",
    "rootDir": "..",

    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },

  "include": [
    "../langraph/**/*",
    "../knowledge/**/*",
    "../runtime-discovery/**/*"
  ]
}
